<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="base_edi_transfer_tree" model="ir.ui.view">
            <field name="name">EDI Transfers</field>
            <field name="model">base.edi.transfer</field>
            <field name="arch" type="xml">
                <tree string="EDI Transfers">
                    <field name="name"/>
                    <field name="direction"/>
                    <field name="file_timestamp"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="base_edi_transfer_form" model="ir.ui.view">
            <field name="name">EDI Transfer</field>
            <field name="model">base.edi.transfer</field>
            <field name="arch" type="xml">
                <form string="EDI Transfer">
                    <header>
                        <button name="identify_and_import_object" type="object" string="Import" class="oe_highlight" attrs="{'invisible': [('direction', '=', 'outbound')]}"/>
                        <button name="identify_and_update_object" type="object" string="Update" class="oe_highlight" attrs="{'invisible': [('direction', '=', 'outbound')]}"/>
                        <button name="send_object" type="object" string="Process" class="oe_highlight" attrs="{'invisible': [('direction', '=', 'inbound')]}"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">

                        </div>
                        <group string="Error" name="error" attrs="{'invisible': [('state', '!=', 'error')]}">
                            <field name="error_text"/>
                        </group>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="edi_exchange_id"/>
                            <field name="direction"/>
                            <field name="ref"/>
                            <field name="original_filename"/>
                            <field name="conversation_id"/>
                            <field name="message_id"/>
                        </group>
                        <notebook>
                            <page name="info" string="Info">
                                <group string="Times" name="times">
                                    <field name="read_date"/>
                                    <field name="sent_date"/>
                                    <field name="process_date"/>
                                    <field name="file_timestamp"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="base_edi_transfer_action" model="ir.actions.act_window">
            <field name="name">EDI Transfers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">base.edi.transfer</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
              </p><p>
                <!-- More details about what a user can do with this object will be OK -->
              </p>
            </field>
        </record>

    </data>
</odoo>
